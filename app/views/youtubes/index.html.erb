<%= link_to "動画を探しに行く", find_videos_youtubes_path %>
<% @youtubes.each do |youtube| %>
  <% @youtube = youtube%>
  <div> 
    <%= @youtube.channel_title %>
  </div> 
  
  <div>
    <iframe width="356" height="200" src="https://www.youtube.com/embed/<%= @youtube.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
    </iframe>
  </div>
  <div>
    <%= @youtube.description%>
  </div>
  <%= link_to "投稿する", new_message_path(youtube_id: @youtube.id,  video_id: @youtube.video_id, channel_title: @youtube.channel_title, title: @youtube.title) %>
<% end %>

