<div id="content">
  <div id= "main-content">
    <div class="acount-page">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="acount-page__inner clearfix">
        <div class="acount-page__inner__left acount-page__header">
          <h2 class="main-title">Sign Up</h2>
          <span class= "sub-title">新規アカウントの作成 </span>
          <span><%= render "devise/shared/links" %> </span>
        </div>  
        <div class="acount-page__inner__right user-form">  
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class= "acount-page__inner__right__icon">
              <div class= "acount-page__inner__right__icon__label">
                <div class ="acount-page__inner__right__icon__input">
                    <%= image_tag asset_path("account-icon/account-icon.jpeg"), id: :img_prev %>
                  <div class= "acount-page__inner__right__icon__input__image">
                    <%= f.file_field :image, class: "acount-page__inner__right__icon__input__btn", id:"user_img" %>
                  </div>
                </div>
              </div>
              <div class = "sub-title">
                画像を追加
              </div>
            </div>
            <div class="field">
              <div class="field-label">
                <%= f.label :nickname %>
              </div>
              <div class="field-input">
                <%= f.text_field :nickname, autofocus: true %>
              </div>
            </div>
    
            <div class="field">
              <div class="field-label">
                <%= f.label :email %>
              </div>
              <div class="field-input">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
    
            <div class="field">
              <div class="field-label">
                <%= f.label :password %>
              </div>
              <div class="field-input">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 桁のパスワードで設定してくだい)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </div>
    
            <div class="field">
              <div class="field-label">
                <%= f.label :password_confirmation %>
              </div>
              <div class="field-input">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>

            <div class="field">
              <div class="field-label">
                <%= f.label :profile %>
              </div>
              <div class="field-input">
                <%= f.text_area :profile, autofocus: true %>
              </div>
            </div>
    
            <div class="actions">
              <%= f.submit "Sign up",  class: "btn"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
